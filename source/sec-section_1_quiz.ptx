  <task label="pic-question">
    <statement>What is an embedded system?</statement>
    <choices>
      <choice correct="no"><statement>
        <p>A stand-alone software program</p>
      </statement>
      <feedback>
      <p>Not Correct! </p>
    </feedback>
      </choice>
      <choice correct="no"><statement>
        <p>A hardware-only system</p>
      </statement>
      <feedback>
      <p>Not Correct! </p>
    </feedback>
      </choice>
      <choice correct="yes"><statement>
        <p>A combination of hardware and software to perform specific tasks</p>
      </statement>
      <feedback>
      <p>Correct! A combination of hardware and software to perform specific tasks.</p>
    </feedback>
      </choice>
      <choice correct="no"><statement>
        <p>A general-purpose computer system</p>
      </statement>
      <feedback>
      <p>Not Correct! </p>
    </feedback>
      </choice>
    </choices>
  </task>
  

